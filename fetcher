#!/usr/bin/env bash

sudo pacman -Syu --noconfirm
sudo pacman -S --needed --noconfirm base-devel git

if ! command -v paru &>/dev/null; then
    if [ -d storage/paru ]; then
        rm -rf storage/paru
    fi
    git clone https://aur.archlinux.org/paru.git storage/paru
    cd storage/paru
    makepkg -si
fi

paru -S --noconfirm \
    mkinitcpio-firmware \
    jq \
    pamixer \
    playerctl \
    hyprland-git \
    hypridle \
    hyprlock \
    hyprpaper \
    hyprpicker \
    i2c-tools \
    ddcutil \
    waybar \
    grim \
    slurp \
    wlogout \
    wl-clipboard \
    ttf-font-awesome \
    ttf-roboto \
    mako \
    blueman \
    gbm \
    hyprland-protocols \
    wezterm \
    foot \
    blueman \
    wayland-protocols \
    polkit \
    polkit-gnome \
    qt5-wayland \
    qt6-wayland \
    xdg-desktop-portal \
    xdg-desktop-portal-gtk \
    xdg-desktop-portal-gnome \
    xdg-desktop-portal-hyprland \
    wl-clipboard \
    network-manager-applet \
    cliphist \
    solaar \
    tofi \
    thunar \
    foot \
    wezterm \
    direnv \
    visual-studio-code-bin \
    greetd \
    greetd-regreet \
    cmake \
    meson \
    cpio \
    cliphist \
    arc-gtk-theme \
    papirus-icon-theme \
    waybar \
    pavucontrol
